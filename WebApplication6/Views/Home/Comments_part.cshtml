@model IEnumerable<WebApplication6.Models.Comments>

<div class="panel">
    <div class="panel-body">
        <div class="media-block">
            @foreach (var item in Model)
    {
            <a class="media-left" href="#">
                <img class="img-circle img-sm" alt="Профиль пользователя" src=@Html.Raw(item.Gender)>
            </a>
        <div class="media-body">
            <div class="mar-btm">
                <a href="#" class="btn-link text-semibold media-heading box-inline">@Html.Raw(item.User) </a>
                <p class="text-muted text-sm"><i class="fa fa-@Html.Raw(item.Like) fa-lg"></i> - @Html.Raw(item.Dates)</p>
            </div>
            <p>@Html.Raw(item.Comment)</p>
            <div class="pad-ver">
            </div>
        </div>
}
        </div>
    </div>
</div>