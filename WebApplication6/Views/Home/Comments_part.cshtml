@model IEnumerable<WebApplication6.Models.Article>
<div class="blogus">
    @{int i = 0;}
    @foreach (var item in Model)
    {
        i++;
        if (((i - 1) % 3) == 0)
        {
            @:
        </div><div class="blogus">
            }
            <article class="c-card__wrapper" style="background-image: url(@Html.Raw(item.MyImg))">
                <div class="c-card__header">
                    <!-- begin c-date -->
                    <div class="c-date">
                        <span>@Html.Raw(item.MyDate)</span>
                    </div>
                    <!-- end c-date -->
                    <!-- begin c-info -->
                    <ul class="c-info">
                        <li><a href="#" class="far fa-bookmark"></a></li>
                        <li><a href="#" class="far fa-heart"><span></span></a></li>
                        <li><a href="#" class="far fa-comment"><span></span></a></li>
                    </ul>
                </div>
                <!-- end c-info -->
                <div class="c-card__body">
                    <div class="c-card__content">
                        <h3 class="c-card__title">
                            <a href="@item.MyAction">@Html.Raw(item.MyName)</a>
                        </h3>
                        <div class="c-card__desc">
                            @Html.Raw(item.MyHtml)
                        </div>
                        <a href="@item.MyAction" class="c-card__more">Подробнее</a>
                    </div>
                </div>
            </article>


            }
        </div>
